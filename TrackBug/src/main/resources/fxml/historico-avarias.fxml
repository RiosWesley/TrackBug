<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox spacing="20" styleClass="form-container"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="trackbug.controller.HistoricoAvariasController">

    <!-- Cabeçalho -->
    <VBox styleClass="form-header" alignment="CENTER">
        <Label text="Histórico de Avarias" styleClass="form-title"/>
        <Label text="Consulte o histórico de avarias dos equipamentos"
               styleClass="form-subtitle"/>
    </VBox>

    <!-- Barra de Ferramentas -->
    <HBox spacing="10" styleClass="toolbar-container">
        <TextField fx:id="pesquisaField"
                   promptText="Pesquisar por descrição ou equipamento..."
                   styleClass="search-field" HBox.hgrow="ALWAYS"/>

        <Button text="Atualizar Lista"
                onAction="#atualizarLista"
                styleClass="btn-secondary"/>
    </HBox>

    <!-- Tabela -->
    <TableView fx:id="tabelaAvarias" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colunaData" text="Data"/>
            <TableColumn fx:id="colunaEquipamento" text="Equipamento"/>
            <TableColumn fx:id="colunaQuantidade" text="Quantidade"/>
            <TableColumn fx:id="colunaDescricao" text="Descrição"/>
        </columns>
        <placeholder>
            <Label text="Nenhuma avaria registrada"/>
        </placeholder>
    </TableView>

    <!-- Barra de Status -->
    <HBox spacing="10" styleClass="status-bar">
        <Label fx:id="totalRegistrosLabel" styleClass="status-label"/>
    </HBox>

    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>

</VBox>