<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<ScrollPane fitToWidth="true"
            styleClass="tela-principal"
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="trackbug.controller.TelaPrincipalController">

        <VBox maxWidth="1600" prefHeight="1000" spacing="15"
              style="-fx-background-color: white;">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Conteúdo dentro do VBox -->
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: rgba(246, 246, 246, 1);
                                                       -fx-effect: dropshadow(three-pass-box, rgba(112, 112, 112, 0.8), 5, 0.9, 0, 2);
                                                       -fx-background-radius: 15px 15px 0px 0px;">
                <!-- Labels e Informações -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Bem-vindo ao Sistema de Gerenciamento de Equipamentos!">
                        <style>
                            -fx-font-size: 24px;
                            -fx-padding: 20 0 5 0;
                            -fx-font-weight: bold;
                            -fx-text-fill: #00B393;
                            -fx-font-family: 'Segoe UI';
                        </style>
                    </Label>

                    <Label text="Selecione uma opção no menu lateral para navegar.">
                        <style>
                            -fx-font-size: 16px;
                            -fx-text-fill: #757575;
                            -fx-font-family: 'Segoe UI';
                        </style>
                    </Label>

                    <Label text="Informativos:">
                        <style>
                            -fx-font-size: 18px;
                            -fx-text-fill: black;
                            -fx-font-family: 'Hind Gunter';
                            -fx-font-weight: bold;
                            -fx-padding: 10 0 0 0;
                        </style>
                    </Label>

                    <HBox style="-fx-padding: 15 20 20 20; -fx-spacing: 100">
                        <VBox prefHeight="100" prefWidth="300" alignment="CENTER" styleClass="info-box">
                            <Label styleClass="form-title" text="Funcionários" style="-fx-alignment: CENTER; -fx-font-size: 30;"/>
                            <Label fx:id="totalFuncionariosLabel" styleClass="info-title"/>
                        </VBox>

                        <VBox prefHeight="100" prefWidth="300" alignment="CENTER" styleClass="info-box">
                            <Label styleClass="form-title" text="Equipamentos" style="-fx-alignment: CENTER; -fx-font-size: 30;"/>
                            <Label fx:id="totalEquipamentosLabel" styleClass="info-title"/>
                        </VBox>

                        <VBox prefHeight="100" prefWidth="300" alignment="CENTER" styleClass="info-box">
                            <Label styleClass="form-title" text="Empréstimos Ativos" style="-fx-alignment: CENTER; -fx-font-size: 26;"/>
                            <Label fx:id="totalEmprestimosAtivosLabel" styleClass="info-title"/>
                        </VBox>

                    </HBox>

                    <HBox style="-fx-padding: 15 20 20 20; -fx-spacing: 100">
                        <VBox prefHeight="100" prefWidth="300" alignment="CENTER" styleClass="info-box">
                                <Label styleClass="form-title" text="Empréstimos Atrasados" style="-fx-alignment: CENTER; -fx-font-size: 25;"/>
                            <Label fx:id="totalEmprestimosAtrasadosLabel" styleClass="info-title"/>
                        </VBox>

                        <VBox prefHeight="100" prefWidth="300" alignment="CENTER" styleClass="info-box">
                            <Label styleClass="form-title" text="Equipamentos com Empréstimos Ativos" style="-fx-alignment: CENTER; -fx-font-size: 15;"/>
                            <Label fx:id="totalEquipamentosEmprestadosLabel" styleClass="info-title"/>
                        </VBox>

                        <VBox prefHeight="100" prefWidth="300" alignment="CENTER" styleClass="info-box">
                            <Label styleClass="form-title" text="Equipamentos com Estoque Baixo" style="-fx-alignment: CENTER; -fx-font-size: 17;"/>
                            <Label fx:id="totalEquipamentosEstoqueLabel" styleClass="info-title"/>
                        </VBox>

                    </HBox>

                </VBox>
                <padding>
                    <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                </padding>
            </VBox>


            <!-- Tabela de Empréstimos Atrasados -->
            <HBox spacing="20">
                <VBox style="-fx-background-color: white;
                         -fx-effect: dropshadow(three-pass-box, rgba(112, 112, 112, 0.8), 5, 0.9, 0, 2);
                         -fx-background-radius: 0px 0px 0px 0px;" alignment="TOP_CENTER"
                      minWidth="670" maxWidth="800" maxHeight="200">
                    <Label text="Empréstimos Atrasados" styleClass="form-subtitle"
                           style="-fx-font-weight: bold; -fx-font-size: 20; -fx-font-family: 'Hind Gunter'; -fx-text-fill: #00B393;"/>
                    <TableView fx:id="tabelaAtrasos" VBox.vgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="colunaId" text="Código" minWidth="70" maxWidth="70"/>
                            <TableColumn fx:id="colunaFuncionario" text="Funcionário"/>
                            <TableColumn fx:id="colunaEquipamento" text="Equipamento"/>
                            <TableColumn fx:id="colunaQuantidade" text="Qtd." minWidth="70" maxWidth="70"/>
                            <TableColumn fx:id="colunaDataPrevista" text="Dev. Prevista"/>
                            <TableColumn fx:id="colunaDiasAtraso" text="Dias em Atraso"/>
                        </columns>
                        <placeholder>
                            <Label text="Nenhum empréstimo em atraso encontrado" style="-fx-font-size: 20;"/>
                        </placeholder>
                    </TableView>
                </VBox>

                <VBox style="-fx-background-color: white;
                         -fx-effect: dropshadow(three-pass-box, rgba(112, 112, 112, 0.8), 5, 0.9, 0, 2);
                         -fx-background-radius: 0px 0px 0px 0px;" alignment="TOP_CENTER"
                      minWidth="460" maxWidth="800" maxHeight="200">
                    <Label text="Equipamentos com Estoque Baixo" styleClass="form-subtitle"
                           style="-fx-font-weight: bold; -fx-font-size: 20; -fx-font-family: 'Hind Gunter'; -fx-text-fill: #00B393;"/>
                    <TableView fx:id="tabelaEstoqueBaixo" VBox.vgrow="ALWAYS">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="colunaIdEstoque" text="Código" />
                            <TableColumn fx:id="colunaEquipamentoEstoque" text="Equipamento"/>
                            <TableColumn fx:id="colunaQuantidadeEstoque" text="Qtd. Estoque"/>
                            <TableColumn fx:id="colunaQuantidadeMinima" text="Qtd. Miníma"/>
                        </columns>
                        <placeholder>
                            <Label text="Nenhum equipamento com quantidade baixa" style="-fx-font-size: 20;"/>
                        </placeholder>
                    </TableView>
                </VBox>
            </HBox>

            <VBox style="-fx-background-color: white;
                         -fx-effect: dropshadow(three-pass-box, rgba(112, 112, 112, 0.8), 5, 0.9, 0, 2);
                         -fx-background-radius: 0px 0px 15px 15px;" alignment="TOP_CENTER"
                  minWidth="1148" maxWidth="1148" maxHeight="300">
                <Label text="Devoluções Esperadas Hoje" styleClass="form-subtitle"
                       style="-fx-font-weight: bold; -fx-font-size: 20; -fx-font-family: 'Hind Gunter'; -fx-text-fill: #00B393;"/>
                <TableView fx:id="tabelaEmprestimosDia" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="colunaIdDia" text="Código" />
                        <TableColumn fx:id="colunaEquipamentoDia" text="Equipamento"/>
                        <TableColumn fx:id="colunaFuncionarioDia" text="Funcionário"/>
                        <TableColumn fx:id="colunaQuantidadeDia" text="Qtd."/>
                        <TableColumn fx:id="colunaDataSaidaDia" text="Dt. Saída"/>
                        <TableColumn fx:id="colunaDataPrevistaDia" text="Dt. Prevista"/>
                        <TableColumn fx:id="colunaStatusDia" text="Status"/>
                    </columns>
                    <placeholder>
                        <Label text="Nenhum equipamento com quantidade baixa" style="-fx-font-size: 20;"/>
                    </placeholder>
                </TableView>
                <HBox maxHeight="5" minHeight="5" minWidth="5" maxWidth="5" />
            </VBox>


            <!-- Repetir outros componentes conforme necessário -->

        </VBox>

</ScrollPane>
