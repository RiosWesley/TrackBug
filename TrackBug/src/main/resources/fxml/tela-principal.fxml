<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<VBox styleClass="form-container" maxWidth="1200" maxHeight="2000" spacing="15" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <VBox  style="-fx-background-color: black;" alignment="TOP_CENTER">
        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #f4f4f4;
                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <VBox alignment="CENTER" spacing="5">
                <Label text="Bem-vindo ao Sistema de Gerenciamento de Equipamentos!">
                    <style>
                        -fx-font-size: 24px;
                        -fx-font-weight: bold;
                        -fx-text-fill: #00B393;
                        -fx-font-family: 'Segoe UI';
                    </style>
                </Label>

                <Label text="Selecione uma opção no menu lateral para navegar.">
                    <style>
                        -fx-font-size: 16px;
                        -fx-text-fill: #757575;
                        -fx-font-family: 'Segoe UI';
                    </style>
                </Label>

                <Label text="Informativos:">
                    <style>
                        -fx-font-size: 18px;
                        -fx-text-fill: black;
                        -fx-font-family: 'Hind Gunter';
                        -fx-font-weight: bold;
                        -fx-padding: 10 0 5 0;
                    </style>
                </Label>
                <HBox>
                    <Label text="Bem-vindo ao Sistema de Gerenciamento de Equipamentos!">
                        <style>
                            -fx-font-size: 24px;
                            -fx-font-weight: bold;
                            -fx-text-fill: #00B393;
                            -fx-font-family: 'Segoe UI';
                        </style>
                    </Label>

                    <Label text="Selecione uma opção no menu lateral para navegar.">
                        <style>
                            -fx-font-size: 16px;
                            -fx-text-fill: #757575;
                            -fx-font-family: 'Segoe UI';
                        </style>
                    </Label>

                    <Label text="Informativos:">
                        <style>
                            -fx-font-size: 18px;
                            -fx-text-fill: black;
                            -fx-font-family: 'Hind Gunter';
                            -fx-font-weight: bold;
                            -fx-padding: 10 0 5 0;
                        </style>
                    </Label>
                </HBox>
            </VBox>
            <padding>
                <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
            </padding>
        </VBox>
    </VBox>

    <VBox  style="-fx-background-color: black;" alignment="TOP_CENTER">
        <VBox  alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;
                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <VBox alignment="CENTER" spacing="15">
                <Label text="Bem-vindo ao Sistema de Gerenciamento de Equipamentos">
                    <style>
                        -fx-font-size: 24px;
                        -fx-font-weight: bold;
                        -fx-text-fill: #00B393;
                        -fx-font-family: 'Segoe UI';
                    </style>
                </Label>

                <Label text="Selecione uma opção no menu lateral para começar">
                    <style>
                        -fx-font-size: 16px;
                        -fx-text-fill: #757575;
                        -fx-font-family: 'Segoe UI';
                    </style>
                </Label>

                <!-- Para o nome do usuário, você precisará usar um bind -->
                <Label fx:id="usuarioLabel">
                    <style>
                        -fx-font-size: 14px;
                        -fx-text-fill: #424242;
                        -fx-font-family: 'Segoe UI';
                    </style>
                </Label>
            </VBox>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </VBox>






</VBox>
