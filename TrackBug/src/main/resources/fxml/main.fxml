<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<?import java.net.URL?>
<BorderPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trackbug.controller.MainController">
    <left>
        <HBox fx:id="menuContainer" minWidth="50">
            <ScrollPane fx:id="menuScrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="menu-scroll-pane">
                <VBox spacing="5" style="-fx-background-color: #1976D2;">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>

                    <!-- Header -->
                    <VBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets bottom="20.0" />
                        </padding>
                        <Label text="TrackBug" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="28.0" />
                            </font>
                            <styleClass>
                                <String fx:value="menu-title"/>
                            </styleClass>
                        </Label>
                    </VBox>

                    <!-- Menu Items -->
                    <Label styleClass="menu-section" text="INÍCIO" textFill="WHITE" />
                    <Button fx:id="btnDashboard" onAction="#mostrarDashboard" styleClass="menu-button" text="📈 Dashboard" />

                    <Label styleClass="menu-section" text="EMPRÉSTIMOS" textFill="WHITE" />
                    <Button fx:id="btnEmprestimos" onAction="#mostrarEmprestimos" styleClass="menu-button" text="➕ Empréstimos" />
                    <Button fx:id="btnDevolucao" onAction="#mostrarDevolucao" styleClass="menu-button" text="↩ Registrar Devolução" />
                    <Button fx:id="btnListarAtivos" onAction="#mostrarEmprestimosAtivos" styleClass="menu-button" text="📊 Empréstimos Ativos" />
                    <Button fx:id="btnListarAtrasos" onAction="#mostrarEmprestimosAtraso" styleClass="menu-button" text="⚠ Empréstimos em Atraso" />

                    <Label styleClass="menu-section" text="EQUIPAMENTOS" textFill="WHITE" />
                    <Button fx:id="btnRegistrarEquip" onAction="#mostrarRegistroEquipamento" styleClass="menu-button" text="📦 Registrar Equipamento" />
                    <Button fx:id="btnListarEquip" onAction="#mostrarListaEquipamentos" styleClass="menu-button" text="📑 Listar Equipamentos" />

                    <Label styleClass="menu-section" text="FUNCIONÁRIOS" textFill="WHITE" />
                    <Button fx:id="btnCadastrarFunc" onAction="#mostrarCadastroFuncionario" styleClass="menu-button" text="👤 Cadastrar Funcionários" />
                    <Button fx:id="btnListarFunc" onAction="#mostrarListaFuncionarios" styleClass="menu-button" text="👥 Listar Funcionários" />

                    <Label styleClass="menu-section" text="RELATÓRIOS" textFill="WHITE" />
                    <Button fx:id="btnHistorico" onAction="#mostrarHistorico" styleClass="menu-button" text="📅 Histórico" />
                    <Button fx:id="btnHistoricoAlteracoes" onAction="#mostrarHistoricoAlteracoes" styleClass="menu-button" text="📝 Histórico de Alterações" />
                    <Button fx:id="btnHistoricoAvarias" onAction="#mostrarHistoricoAvarias" styleClass="menu-button" text="🔧 Histórico de Avarias" />

                    <Label fx:id="labelAdministracao" styleClass="menu-section" text="ADMINISTRAÇÃO" textFill="WHITE" />
                    <Button fx:id="btnGerenciarUsuarios" onAction="#mostrarGerenciamentoUsuarios" styleClass="menu-button" text="👥 Gerenciar Usuários" />

                    <!-- Spacer -->
                    <Region VBox.vgrow="ALWAYS" />

                    <!-- Logout Button -->
                    <Button fx:id="btnLogout" onAction="#logout" styleClass="menu-button, menu-button-logout" text="🚪 Sair">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </ScrollPane>
        </HBox>
    </left>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #f4f4f4;">
            <VBox fx:id="areaPrincipal" alignment="CENTER" spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>
                <VBox alignment="CENTER" spacing="15" />
            </VBox>
        </ScrollPane>
    </center>

    <stylesheets>
        <URL value="@../styles/styles.css" />
    </stylesheets>
</BorderPane>