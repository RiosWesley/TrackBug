<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trackbug.controller.MainController">
    <left>
        <HBox fx:id="menuContainer" minWidth="50">
            <ScrollPane fx:id="menuScrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="menu-scroll-pane">
                <VBox spacing="5" style="-fx-background-color: #1976D2;">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>

                    <!-- Header -->
                    <VBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets bottom="20.0" />
                        </padding>
                        <Label styleClass="menu-title" text="TrackBug" textFill="WHITE">
                            <font>
                                <Font name="Segoe UI Bold" size="28.0" />
                            </font>
                        </Label>
                    </VBox>

                    <!-- Menu Items -->
                    <Label style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);;" styleClass="menu-section" text="INÍCIO" />
                    <Button fx:id="btnDashboard" onAction="#mostrarDashboard" styleClass="menu-button">
                        <graphic>
                            <HBox styleClass="button-content">
                                <Label styleClass="menu-icon" text="📈" />
                                <Label style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);;" styleClass="menu-text" text="Dashboard" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Label styleClass="menu-section" text="EMPRÉSTIMOS" />
                    <Button fx:id="btnEmprestimos" onAction="#mostrarEmprestimos" styleClass="menu-button">
                        <graphic>
                            <HBox styleClass="button-content">
                                <Label styleClass="menu-icon" text="➕" />
                                <Label styleClass="menu-text" text="Empréstimos" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnDevolucao" onAction="#mostrarDevolucao" styleClass="menu-button">
                        <graphic>
                            <HBox styleClass="button-content">
                                <Label styleClass="menu-icon" text="↩" />
                                <Label styleClass="menu-text" text="Registrar Devolução" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnListarAtivos" onAction="#mostrarEmprestimosAtivos" styleClass="menu-button">
                        <graphic>
                            <HBox styleClass="button-content">
                                <Label styleClass="menu-icon" text="📊" />
                                <Label styleClass="menu-text" text="Empréstimos Ativos" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnListarAtrasos" onAction="#mostrarEmprestimosAtraso" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="⚠" />
                                <Label styleClass="menu-text" text="Empréstimos em Atraso" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Label styleClass="menu-section" text="EQUIPAMENTOS" textFill="WHITE" />
                    <Button fx:id="btnRegistrarEquip" onAction="#mostrarRegistroEquipamento" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="📦" />
                                <Label styleClass="menu-text" text="Registrar Equipamento" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnListarEquip" onAction="#mostrarListaEquipamentos" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="📑" />
                                <Label styleClass="menu-text" text="Listar Equipamentos" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Label styleClass="menu-section" text="FUNCIONÁRIOS" textFill="WHITE" />
                    <Button fx:id="btnCadastrarFunc" onAction="#mostrarCadastroFuncionario" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="👤" />
                                <Label styleClass="menu-text" text="Cadastrar Funcionários" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnListarFunc" onAction="#mostrarListaFuncionarios" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="👥" />
                                <Label styleClass="menu-text" text="Listar Funcionários" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Label styleClass="menu-section" text="RELATÓRIOS" textFill="WHITE" />
                    <Button fx:id="btnHistorico" onAction="#mostrarHistorico" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="📅" />
                                <Label styleClass="menu-text" text="Histórico" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnHistoricoAlteracoes" onAction="#mostrarHistoricoAlteracoes" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="📝" />
                                <Label styleClass="menu-text" text="Histórico de Alterações" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Button fx:id="btnHistoricoAvarias" onAction="#mostrarHistoricoAvarias" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="🔧" />
                                <Label styleClass="menu-text" text="Histórico de Avarias" />
                            </HBox>
                        </graphic>
                    </Button>

                    <Label fx:id="labelAdministracao" styleClass="menu-section" text="ADMINISTRAÇÃO" textFill="WHITE" />
                    <Button fx:id="btnGerenciarUsuarios" onAction="#mostrarGerenciamentoUsuarios" styleClass="menu-button">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="👥" />
                                <Label styleClass="menu-text" text="Gerenciar Usuários" />
                            </HBox>
                        </graphic>
                    </Button>

                    <!-- Spacer -->
                    <Region VBox.vgrow="ALWAYS" />

                    <!-- Logout Button -->
                    <Button fx:id="btnLogout" onAction="#logout" styleClass="menu-button, menu-button-logout">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="menu-icon" text="🚪" />
                                <Label styleClass="menu-text" text="Sair" />
                            </HBox>
                        </graphic>
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </ScrollPane>
        </HBox>
    </left>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #f4f4f4;">
            <VBox fx:id="areaPrincipal" alignment="CENTER" spacing="20" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>
            </VBox>
        </ScrollPane>
    </center>

    <stylesheets>
        <URL value="@../styles/styles.css" />
    </stylesheets>
</BorderPane>
