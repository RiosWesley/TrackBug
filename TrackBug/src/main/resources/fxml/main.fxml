<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trackbug.controller.MainController">
    <left>
        <ScrollPane fx:id="menuScrollPane" fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" styleClass="menu-scroll-pane">
            <VBox prefWidth="250" spacing="5" style="-fx-background-color: #1976D2; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 0);">
                <padding>
                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>

                <!-- Header -->
                <VBox alignment="CENTER" spacing="10">
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                    <Label style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.8, 0, 0);;" text="TrackBug" textFill="WHITE">
                        <font>
                            <Font name="Segoe UI Bold" size="28.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Menu Items -->
                <Label style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.9), 10, 0.2, 0, 0);" styleClass="menu-section" text="INÍCIO" />

                <Button fx:id="btnDashboard" onAction="#mostrarDashboard" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📈 Dashboard" />

                <Label fx:id="labelEmprestimos" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.9), 10, 0.2, 0, 0);" styleClass="menu-section" text="EMPRÉSTIMOS" />

                <Button fx:id="btnEmprestimos" onAction="#mostrarEmprestimos" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="➕ Empréstimos" />
                <Button fx:id="btnDevolucao" onAction="#mostrarDevolucao" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="↩ Registrar Devolução" />
                <Button fx:id="btnListarAtivos" onAction="#mostrarEmprestimosAtivos" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📊 Empréstimos Ativos" />
                <Button fx:id="btnListarAtrasos" onAction="#mostrarEmprestimosAtraso" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="⚠ Empréstimos em Atraso" />

                <Label fx:id="labelEquipamentos" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.9), 10, 0.2, 0, 0);" styleClass="menu-section" text="EQUIPAMENTOS" />
                <Button fx:id="btnRegistrarEquip" onAction="#mostrarRegistroEquipamento" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📦 Registrar Equipamento" />
                <Button fx:id="btnListarEquip" onAction="#mostrarListaEquipamentos" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📑 Listar Equipamentos" />


                <Label fx:id="labelFuncionarios" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.9), 10, 0.2, 0, 0);" styleClass="menu-section" text="FUNCIONÁRIOS" />
                <Button fx:id="btnCadastrarFunc" onAction="#mostrarCadastroFuncionario" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="👤 Cadastrar Funcionários" />
                <Button fx:id="btnListarFunc" onAction="#mostrarListaFuncionarios" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="👥 Listar Funcionários" />


                <Label fx:id="labelRelatorios" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.9), 10, 0.2, 0, 0);" styleClass="menu-section" text="RELATÓRIOS" />
                <Button fx:id="btnHistorico" onAction="#mostrarHistorico" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📅 Histórico" />
                <Button fx:id="btnHistoricoAlteracoes" onAction="#mostrarHistoricoAlteracoes" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📑 Histórico de Alterações" />
                <Button fx:id="btnHistoricoAvarias" onAction="#mostrarHistoricoAvarias" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="📑 Histórico de Avarias" />


                <Label fx:id="labelAdministracao" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.9), 10, 0.2, 0, 0);" styleClass="menu-section" text="ADMINISTRAÇÃO" />
                <Button fx:id="btnGerenciarUsuarios" onAction="#mostrarGerenciamentoUsuarios" style="-fx-effect: dropshadow(three-pass-box, rgba(15, 94, 171, 0.8), 15, 0.5, 0, 0);" styleClass="menu-button, menu-item" text="👥 Gerenciar Usuários" />
            </VBox>
        </ScrollPane>
    </left>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #f4f4f4;">
            <VBox fx:id="areaPrincipal" alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <padding>
                    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                </padding>

                <VBox alignment="CENTER" spacing="15">
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
