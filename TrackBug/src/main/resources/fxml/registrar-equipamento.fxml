<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="form-container"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="trackbug.controller.RegistrarEquipamentoController">

    <!-- Cabeçalho -->
    <VBox styleClass="form-header" alignment="CENTER">
        <Label text="Registrar Novo Equipamento" styleClass="form-title"/>
        <Label text="Preencha os dados do novo equipamento" styleClass="form-subtitle"/>
    </VBox>

    <!-- Formulário -->
    <GridPane hgap="15" vgap="15">
        <!-- Código -->
        <Label text="Código:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="codigoField" promptText="Digite o código"
                   GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Descrição -->
        <Label text="Descrição:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="descricaoField" promptText="Digite a descrição"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Data de Compra -->
        <Label text="Data de Compra:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dataCompraField"
                    GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <!-- Tipo de Item -->
        <Label text="Tipo de Item:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="tipoItemCombo" promptText="Selecione o tipo"
                  GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <!-- Tipo de Uso -->
        <Label text="Tipo de Uso:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <ComboBox fx:id="tipoUsoCombo" promptText="Selecione o tipo de uso"
                  GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <!-- Quantidade Inicial -->
        <Label text="Quantidade Inicial:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="quantidadeInicialField" promptText="Digite a quantidade"
                   GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <!-- Quantidade Mínima -->
        <Label text="Quantidade Mínima:" styleClass="form-label"
               GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="quantidadeMinimaField" promptText="Digite a quantidade mínima"
                   GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <!-- Medidas -->
        <CheckBox fx:id="medidasCheckBox" text="Incluir medidas"
                  GridPane.columnSpan="2" GridPane.rowIndex="7"/>

        <VBox fx:id="medidasContainer" spacing="10" visible="false" managed="false"
              GridPane.columnSpan="2" GridPane.rowIndex="8">
            <!-- Peso -->
            <HBox spacing="10">
                <Label text="Peso (g):" styleClass="form-label"/>
                <TextField fx:id="pesoField" promptText="Digite o peso"/>
            </HBox>

            <!-- Largura -->
            <HBox spacing="10">
                <Label text="Largura (cm):" styleClass="form-label"/>
                <TextField fx:id="larguraField" promptText="Digite a largura"/>
            </HBox>

            <!-- Comprimento -->
            <HBox spacing="10">
                <Label text="Comprimento (cm):" styleClass="form-label"/>
                <TextField fx:id="comprimentoField" promptText="Digite o comprimento"/>
            </HBox>
        </VBox>
    </GridPane>

    <!-- Botões -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar" onAction="#salvarEquipamento" styleClass="btn-primary"/>
        <Button text="Limpar" onAction="#limparFormulario" styleClass="btn-secondary"/>
    </HBox>

</VBox>