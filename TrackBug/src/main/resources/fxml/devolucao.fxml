<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="30" alignment="TOP_CENTER" styleClass="form-container"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="trackbug.controller.DevolucaoController">

    <!-- Cabeçalho -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="Registrar Devolução" styleClass="form-title">
            <font>
                <Font name="Segoe UI Bold" size="24"/>
            </font>
        </Label>
        <Label text="Selecione o empréstimo para registrar a devolução" styleClass="form-subtitle">
            <font>
                <Font name="Segoe UI" size="14"/>
            </font>
        </Label>
    </VBox>

    <!-- Container principal -->
    <VBox styleClass="form-content-container" maxWidth="600">
        <!-- Seleção do empréstimo -->
        <VBox styleClass="form-group">
            <Label text="Selecione o Empréstimo:" styleClass="form-label"/>
            <ComboBox fx:id="emprestimoCombo" prefWidth="300" styleClass="form-combo"
                      promptText="Selecione o código do empréstimo"/>
        </VBox>

        <!-- Card de detalhes -->
        <VBox spacing="10" styleClass="details-card">
            <Label text="Detalhes do Empréstimo" styleClass="card-title"/>
            <TextArea fx:id="detalhesEmprestimo"
                      prefRowCount="20"
                      prefWidth="700"
                      wrapText="true"
                      editable="false"
                      />
        </VBox>

        <!-- Botões -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Confirmar Devolução"
                    onAction="#confirmarDevolucao"
                    styleClass="btn-primary"/>
            <Button text="Cancelar"
                    onAction="#cancelar"
                    styleClass="btn-secondary"/>
        </HBox>
    </VBox>
</VBox>