<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.paint.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="trackbug.controller.LoginController">

    <!-- Background Pattern -->
    <Rectangle width="1000" height="800">
        <fill>
            <LinearGradient endX="1.0" endY="1.0">
                <stops>
                    <Stop color="#1E3C72"/>
                    <Stop color="#2A5298" offset="1.0"/>
                </stops>
            </LinearGradient>
        </fill>
    </Rectangle>

    <!-- Main Content -->
    <BorderPane>
        <!-- Header -->
        <top>
            <VBox alignment="TOP_CENTER" spacing="15.0">
                <padding>
                    <Insets top="40" bottom="20"/>
                </padding>

                <StackPane>
                    <!-- Logo Circle -->
                    <Circle radius="45" centerX="0" centerY="0">
                        <fill>
                            <LinearGradient endX="1.0" endY="1.0">
                                <stops>
                                    <Stop color="#2196F3"/>
                                    <Stop color="#1565C0" offset="1.0"/>
                                </stops>
                            </LinearGradient>
                        </fill>
                        <effect>
                            <DropShadow color="#00000066" radius="15"/>
                        </effect>
                    </Circle>

                    <!-- Bug Icon -->
                    <Label text="🐞" style="-fx-font-size: 32;"/>
                </StackPane>

                <Label text="TrackBug" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Black" size="46.0"/>
                    </font>
                    <effect>
                        <DropShadow color="#00000066" radius="12"/>
                    </effect>
                </Label>

                <Label text="Sistema Avançado de Gerenciamento de Estoque" textFill="WHITE" opacity="0.9">
                    <font>
                        <Font name="Segoe UI Light" size="18.0"/>
                    </font>
                </Label>
            </VBox>
        </top>

        <!-- Login Form -->
        <center>
            <VBox alignment="TOP_CENTER" maxWidth="500">
                <!-- Card de Login -->
                <VBox alignment="TOP_CENTER" spacing="35"
                      style="-fx-background-color: white; -fx-padding: 45;
                             -fx-background-radius: 20;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 30, 0, 0, 15);">

                    <!-- Welcome Section -->
                    <VBox spacing="12" alignment="CENTER">
                        <Label text="Bem-vindo ao TrackBug" textFill="#2C3E50">
                            <font>
                                <Font name="Segoe UI Bold" size="32"/>
                            </font>
                        </Label>
                        <Label text="Gerencie seus projetos com eficiência e precisão"
                               textFill="#7F8C8D" alignment="CENTER" wrapText="true">
                            <font>
                                <Font name="Segoe UI" size="15"/>
                            </font>
                        </Label>
                    </VBox>

                    <!-- Alert Messages -->
                    <VBox fx:id="alertBox" visible="false" managed="false">
                        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #FFF5F5;
                              -fx-padding: 15 20; -fx-background-radius: 12;">
                            <Label text="⚠️" style="-fx-font-size: 16;"/>
                            <Label fx:id="mensagemErro" textFill="#E53E3E" wrapText="true">
                                <font>
                                    <Font name="Segoe UI Semibold" size="14"/>
                                </font>
                            </Label>
                        </HBox>
                    </VBox>

                    <!-- Login Fields -->
                    <VBox spacing="25">
                        <!-- Username -->
                        <VBox spacing="10">
                            <Label text="Nome de Usuário" textFill="#34495E">
                                <font>
                                    <Font name="Segoe UI Semibold" size="14"/>
                                </font>
                            </Label>
                            <TextField fx:id="usernameField" promptText="Digite seu usuário"
                                       style="-fx-background-color: #F7FAFC; -fx-padding: 15 20;
                                            -fx-background-radius: 12; -fx-prompt-text-fill: #A0AEC0;
                                            -fx-border-color: #E2E8F0; -fx-border-radius: 12;">
                                <font>
                                    <Font name="Segoe UI" size="14"/>
                                </font>
                            </TextField>
                        </VBox>

                        <!-- Password -->
                        <VBox spacing="10">
                            <Label text="Senha" textFill="#34495E">
                                <font>
                                    <Font name="Segoe UI Semibold" size="14"/>
                                </font>
                            </Label>
                            <PasswordField fx:id="passwordField" promptText="Digite sua senha"
                                           style="-fx-background-color: #F7FAFC; -fx-padding: 15 20;
                                                -fx-background-radius: 12; -fx-prompt-text-fill: #A0AEC0;
                                                -fx-border-color: #E2E8F0; -fx-border-radius: 12;">
                                <font>
                                    <Font name="Segoe UI" size="14"/>
                                </font>
                            </PasswordField>
                        </VBox>
                    </VBox>

                    <!-- Login Button -->
                    <Button fx:id="loginButton" defaultButton="true" onAction="#realizarLogin"
                            style="-fx-background-color: linear-gradient(to right, #2196F3, #1976D2);
                                   -fx-text-fill: white; -fx-background-radius: 12;
                                   -fx-cursor: hand; -fx-padding: 15 30;"
                            maxWidth="Infinity">
                        <graphic>
                            <HBox alignment="CENTER" spacing="10">
                                <Label text="Entrar na Plataforma" textFill="WHITE">
                                    <font>
                                        <Font name="Segoe UI Bold" size="16"/>
                                    </font>
                                </Label>
                            </HBox>
                        </graphic>
                        <effect>
                            <DropShadow color="#2196F340" radius="15" spread="0.2"/>
                        </effect>
                    </Button>
                </VBox>
            </VBox>
        </center>

        <!-- Footer -->
        <bottom>
            <VBox alignment="CENTER" spacing="10">
                <padding>
                    <Insets top="30" bottom="30"/>
                </padding>
                <Label text="© 2024 TrackBug - Todos os direitos reservados" textFill="WHITE" opacity="0.8">
                    <font>
                        <Font name="Segoe UI" size="13"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="20">
                    <Hyperlink text="Termos de Uso" style="-fx-text-fill: white; -fx-border-color: transparent;"
                               opacity="0.8">
                        <font>
                            <Font name="Segoe UI" size="13"/>
                        </font>
                    </Hyperlink>
                    <Hyperlink text="Política de Privacidade" style="-fx-text-fill: white; -fx-border-color: transparent;"
                               opacity="0.8">
                        <font>
                            <Font name="Segoe UI" size="13"/>
                        </font>
                    </Hyperlink>
                    <Hyperlink text="Suporte" style="-fx-text-fill: white; -fx-border-color: transparent;"
                               opacity="0.8">
                        <font>
                            <Font name="Segoe UI" size="13"/>
                        </font>
                    </Hyperlink>
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>
</StackPane>