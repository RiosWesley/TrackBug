<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.Group?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="trackbug.controller.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #1E293B, #0F172A);">

    <Group>
        <Circle centerX="200" centerY="200" radius="300" opacity="0.15" fill="#3B82F6">
            <effect>
                <GaussianBlur radius="120"/>
            </effect>
        </Circle>
        <Circle centerX="800" centerY="600" radius="250" opacity="0.15" fill="#2563EB">
            <effect>
                <GaussianBlur radius="120"/>
            </effect>
        </Circle>
    </Group>

    <BorderPane>
        <top>
            <VBox alignment="TOP_CENTER" spacing="24.0">
                <padding>
                    <Insets top="45" bottom="25"/>
                </padding>

                <StackPane>
                    <Group>
                        <Circle radius="54" fill="linear-gradient(to right, #3B82F6, #2563EB)">
                            <effect>
                                <DropShadow color="#00000080" radius="30" spread="0.25"/>
                            </effect>
                        </Circle>
                        <Label text="🐞" style="-fx-font-size: 44;" textFill="WHITE">
                            <effect>
                                <DropShadow color="#2563EB" radius="25" spread="0.1"/>
                            </effect>
                        </Label>
                    </Group>
                </StackPane>

                <VBox alignment="CENTER" spacing="10">
                    <Label text="TrackBug" textFill="WHITE">
                        <font>
                            <Font name="Inter Black" size="56.0"/>
                        </font>
                        <effect>
                            <DropShadow color="#00000090" radius="25" spread="0.2"/>
                        </effect>
                    </Label>
                    <Label text="Sistema Inteligente de Gestão de Projetos" textFill="#94A3B8">
                        <font>
                            <Font name="Inter Medium" size="19.0"/>
                        </font>
                        <effect>
                            <Bloom threshold="0.8"/>
                        </effect>
                    </Label>
                </VBox>
            </VBox>
        </top>

        <center>
            <VBox alignment="TOP_CENTER" maxWidth="480" spacing="22">
                <VBox alignment="TOP_CENTER" spacing="38"
                      style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #F8FAFC);
                             -fx-padding: 45 40;
                             -fx-background-radius: 24;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 60, 0, 0, 25);">

                    <VBox spacing="14" alignment="CENTER">
                        <Label text="Bem-vindo " textFill="#0F172A">
                            <font>
                                <Font name="Inter Black" size="38"/>
                            </font>
                            <effect>
                                <DropShadow color="#00000040" radius="15" spread="0.1"/>
                            </effect>
                        </Label>
                        <Label text="Gerencie seus estoques com eficiência e precisão"
                               textFill="#64748B" alignment="CENTER" wrapText="true">
                            <font>
                                <Font name="Inter SemiBold" size="17"/>
                            </font>
                        </Label>
                    </VBox>

                    <VBox fx:id="alertBox" visible="false" managed="false">
                        <HBox spacing="16" alignment="CENTER_LEFT"
                              style="-fx-background-color: linear-gradient(to right, #FEF2F2, #FEE2E2);
                                     -fx-padding: 20 24;
                                     -fx-background-radius: 18;">
                            <Label text="⚠️" style="-fx-font-size: 22;"/>
                            <Label fx:id="mensagemErro" textFill="#DC2626" wrapText="true">
                                <font>
                                    <Font name="Inter Bold" size="15"/>
                                </font>
                            </Label>
                        </HBox>
                    </VBox>

                    <VBox spacing="28">
                        <VBox spacing="12">
                            <Label text="Nome de Usuário" textFill="#334155">
                                <font>
                                    <Font name="Inter SemiBold" size="15"/>
                                </font>
                            </Label>
                            <HBox alignment="CENTER_LEFT" spacing="12"
                                  style="-fx-background-color: #F1F5F9;
                                         -fx-padding: 0 16;
                                         -fx-background-radius: 12;
                                         -fx-border-color: #E2E8F0;
                                         -fx-border-radius: 12;
                                         -fx-border-width: 1.5;">
                                <Label text="👤" style="-fx-font-size: 18;" textFill="#64748B"/>
                                <TextField fx:id="usernameField" promptText="Digite seu nome de usuário"
                                           style="-fx-background-color: transparent;
                                                -fx-padding: 14 10;
                                                -fx-prompt-text-fill: #94A3B8;
                                                -fx-text-fill: #0F172A;
                                                -fx-font-size: 14;
                                                -fx-font-family: 'Inter Medium';"
                                           prefWidth="300"/>
                            </HBox>
                        </VBox>

                        <VBox spacing="12">
                            <Label text="Senha" textFill="#334155">
                                <font>
                                    <Font name="Inter SemiBold" size="15"/>
                                </font>
                            </Label>
                            <HBox alignment="CENTER_LEFT" spacing="12"
                                  style="-fx-background-color: #F1F5F9;
                                         -fx-padding: 0 16;
                                         -fx-background-radius: 12;
                                         -fx-border-color: #E2E8F0;
                                         -fx-border-radius: 12;
                                         -fx-border-width: 1.5;">
                                <Label text="🔒" style="-fx-font-size: 18;" textFill="#64748B"/>
                                <PasswordField fx:id="passwordField" promptText="Digite sua senha"
                                               style="-fx-background-color: transparent;
                                                    -fx-padding: 14 10;
                                                    -fx-prompt-text-fill: #94A3B8;
                                                    -fx-text-fill: #0F172A;
                                                    -fx-font-size: 14;
                                                    -fx-font-family: 'Inter Medium';"
                                               prefWidth="300"/>
                            </HBox>
                        </VBox>

                        <HBox spacing="0" alignment="CENTER_LEFT">
                            <Region HBox.hgrow="ALWAYS"/>
                        </HBox>
                    </VBox>

                    <Button fx:id="loginButton" defaultButton="true" onAction="#realizarLogin"
                            style="-fx-background-color: linear-gradient(to right, #3B82F6, #2563EB);
                                   -fx-background-radius: 12;
                                   -fx-cursor: hand;
                                   -fx-padding: 16 32;">
                        <graphic>
                            <HBox alignment="CENTER" spacing="12">
                                <Label text="Entrar" textFill="WHITE">
                                    <font>
                                        <Font name="Inter Black" size="16"/>
                                    </font>
                                </Label>
                            </HBox>
                        </graphic>
                        <effect>
                            <DropShadow color="#3B82F660" radius="20" spread="0.15"/>
                        </effect>
                    </Button>
                </VBox>
            </VBox>
        </center>

        <bottom>
            <VBox alignment="CENTER" spacing="14" style="-fx-padding: 0 0 35 0;">
                <Label text="© 2024 TrackBug. Todos os direitos reservados" textFill="#94A3B8">
                    <font>
                        <Font name="Inter SemiBold" size="15"/>
                    </font>
                    <effect>
                        <Bloom threshold="0.8"/>
                    </effect>
                </Label>
            </VBox>
        </bottom>
    </BorderPane>
</StackPane>