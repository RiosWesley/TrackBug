                                    -fx-background-color: #64CFBC; -fx-prompt-text-fill: #FFFFFF;
                                    -fx-border-width: 0; -fx-font-weight: bold;" >
                            <font>
                                <Font name="Hind Guntur" size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets top="0" bottom="10"/>
                            </VBox.margin>
                        </TextField>
                        <!-- Campo da Senha -->
                        <PasswordField fx:id="passwordField" maxWidth="300" promptText="Senha                                                          ðŸ”’" styleClass="login-field"
                                       style= "-fx-background-radius: 50;
                                       -fx-background-color: #64CFBC; -fx-prompt-text-fill: #FFFFFF;
                                       -fx-border-width: 0; -fx-font-weight: bold;">
                            <!-- ConfiguraÃ§Ãµes da fonte -->
                            <font>
                                <Font name="Hind Guntur" size="14.0" />
                            </font>
                            <!-- Margem da VBox -->
                            <VBox.margin>
                                <Insets top="0" bottom="50"/>
                            </VBox.margin>
                        </PasswordField>
                    </VBox>

                    <!-- SeÃ§Ã£o inferior -->
                    <VBox alignment="BOTTOM_CENTER">
                        <!-- Campo de botÃ£o e suas definiÃ§Ãµes -->
                        <Button fx:id="loginButton" maxWidth="300" maxHeight="80" mnemonicParsing="false" onAction="#realizarLogin"
                                styleClass="login-button" text="Entrar">
                            <!-- ConfiguraÃ§Ãµes da fonte -->
                            <font>
                                <Font name="Hind Guntur" size="18.75" />
                            </font>
                        </Button>
                    </VBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_CENTER">
            <!-- Imagem da esquerda -->
            <ImageView fx:id="leftImage" fitHeight="200" fitWidth="200" preserveRatio="true">
                <VBox.margin>
                    <Insets bottom="-50"/>
                </VBox.margin>
            </ImageView>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Imagem da direita -->
            <ImageView fx:id="rightImage" fitHeight="200" fitWidth="200" preserveRatio="true">
                <VBox.margin>
                    <Insets bottom="-50"/>
                </VBox.margin>
            </ImageView>
        </HBox>
    </bottom>



</BorderPane>