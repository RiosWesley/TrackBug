<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="formContainer" spacing="30" styleClass="form-container" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="trackbug.controller.HistoricoAlteracoesController">

    <!-- Cabeçalho -->
    <VBox styleClass="form-header" alignment="CENTER">
        <Label text="Histórico de Alterações" styleClass="form-title"/>
        <Label text="Visualize todas as alterações realizadas nos equipamentos"
               styleClass="form-subtitle"/>
    </VBox>

    <!-- Barra de Ferramentas -->
    <HBox spacing="15" styleClass="toolbar-container" alignment="CENTER_LEFT">
        <!-- Filtro de Ação -->
        <ComboBox fx:id="filtroAcao" promptText="Tipo de Ação"
                  styleClass="form-combo"/>

        <!-- Campo de Busca -->
        <TextField fx:id="campoBusca"
                   promptText="Buscar por equipamento ou descrição..."
                   styleClass="search-field"/>

        <!-- Botão Atualizar -->
        <Button text="Atualizar Lista" onAction="#atualizarLista"
                styleClass="btn-secondary"/>

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </HBox>

    <!-- Tabela de Histórico -->
    <TableView fx:id="tabelaHistorico" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colunaData" text="Data/Hora"/>
            <TableColumn fx:id="colunaEquipamento" text="Equipamento"/>
            <TableColumn fx:id="colunaDescricao" text="Descrição"/>
            <TableColumn fx:id="colunaAcao" text="Ação"/>
            <TableColumn fx:id="colunaDetalhes" text="Detalhes"/>
        </columns>
        <placeholder>
            <Label text="Nenhuma alteração encontrada"/>
        </placeholder>
    </TableView>

    <!-- Barra de Status -->
    <HBox spacing="10" styleClass="status-bar" alignment="CENTER_RIGHT">
        <Label fx:id="statusLabel" styleClass="status-label"/>
        <padding>
            <Insets top="5" right="10" bottom="5" left="10"/>
        </padding>
    </HBox>
</VBox>